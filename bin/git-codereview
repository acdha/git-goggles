#!/usr/bin/env python

import sys
import os

sys.path.insert(0, os.path.join(os.path.dirname(os.curdir), 'src'))

from codereview import get_status, complete_review

if __name__ == "__main__":
    if len(sys.argv) == 1:
        get_status()
    elif len(sys.argv) == 2:
        if sys.argv[1] == 'complete':
            complete_review()
        else:
            print 'usage: git codereview [complete]'
